set nocompatible
syntax enable
nnoremap <C-space> a
imap <C-space> <Esc>
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set mouse=a
set number
" ctrl+s to save
nnoremap <c-s> :w<CR> 
inoremap <c-s> <Esc>:w<CR>l
vnoremap <c-s> <Esc>:w<CR>
"ctrl+q to quit all
map <C-Q> :qa<CR>
colorscheme tokyonight

if exists('+termguicolors')
  let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
  let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
  set termguicolors
endif
