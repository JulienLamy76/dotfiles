" General settings
set showmode
set clipboard+=unnamed
set NERDTree


" Keybinds

" Save on Ctrl+s
nnoremap <c-s> :w<CR>
" Exit insert on save
inoremap <c-s> <Esc>:w<CR>l
" Exit visual on save
vnoremap <c-s> <Esc>:w<CR>
" Indent
nnoremap <TAB> >>
nnoremap <S-TAB> <<
vnoremap <TAB> >gv
vnoremap <S-TAB> <gv
